---
const videoUrl = '/Banner-inaguracion.mp4';
let showBanner = true;
---

{showBanner && (
  <div id="banner-video" class="fixed inset-0 z-50 grid items-center justify-center bg-black bg-opacity-90 transition-opacity duration-500 ease-in-out">
    <div class="relative w-full max-w-4xl mx-auto text-center">
      <h1 class="text-white text-3xl mb-4">Bienvenidos</h1>
      <video autoplay muted loop class="w-full h-auto">
        <source src={videoUrl} type="video/mp4" />
        Tu navegador no soporta el formato de video.
      </video>
      <button id="close-banner" class="mt-4 bg-white text-black px-6 py-3 rounded">
        Continuar a la carta
      </button>
    </div>
  </div>
)}

<style>
  #banner-video {
    opacity: 1;
    transition: opacity 1.5s ease-in-out;
  }

  #banner-video.hidden {
    opacity: 0;
    pointer-events: none;
  }

  #banner-video video {
    max-width: 100%;
    height: auto;
  }

  button {
    transition: background-color 1s ease-in-out;
  }

  button:hover {
    background-color: #f3f3f3;
  }
</style>

<script>
  const closeButton = document.getElementById('close-banner');
  const bannerVideo = document.getElementById('banner-video');

  if (closeButton && bannerVideo) {
    closeButton.addEventListener('click', () => {
      bannerVideo.classList.add('hidden');
      setTimeout(() => {
        bannerVideo.style.display = 'none';
      }, 2000);
    });
  }
</script>
